# Market Data Service Configuration
# Copy this file to .env and update with your values

# ====================================
# SERVER CONFIGURATION
# ====================================
SERVER_PORT=8083
SERVER_READ_TIMEOUT=15s
SERVER_WRITE_TIMEOUT=15s
SERVER_SHUTDOWN_TIMEOUT=10s

# ====================================
# DATABASE CONFIGURATION (PostgreSQL)
# ====================================
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=hub_market_data
DB_SSLMODE=disable

# ====================================
# REDIS CONFIGURATION
# ====================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ====================================
# GRPC CONFIGURATION
# ====================================
GRPC_PORT=50054

# ====================================
# LOGGING CONFIGURATION
# ====================================
LOG_LEVEL=info
LOG_FORMAT=json

# ====================================
# PRICE OSCILLATION SERVICE
# ====================================
# Update interval for price oscillations (in seconds)
PRICE_UPDATE_INTERVAL=4

# Price oscillation percentage (e.g., 0.01 = Â±1%)
PRICE_OSCILLATION_PERCENT=0.01

# ====================================
# CACHE CONFIGURATION
# ====================================
# Cache TTL for market data (in minutes)
CACHE_TTL_MINUTES=5

# ====================================
# ENVIRONMENT
# ====================================
ENVIRONMENT=development
