# ====================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ====================================
# Copy this file to .env.prod and fill in the values
# NEVER commit .env.prod to version control

# ====================================
# VERSION & REGISTRY
# ====================================
VERSION=1.0.0
DOCKER_REGISTRY=registry.example.com/

# ====================================
# SERVER CONFIGURATION
# ====================================
SERVER_PORT=8083
SERVER_READ_TIMEOUT=15s
SERVER_WRITE_TIMEOUT=15s
SERVER_SHUTDOWN_TIMEOUT=10s

# ====================================
# DATABASE CONFIGURATION (PostgreSQL)
# ====================================
DB_HOST=market-data-db
DB_PORT=5432
DB_USER=market_data_user
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
DB_NAME=hub_market_data
DB_SSLMODE=require
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=5m

# ====================================
# REDIS CONFIGURATION
# ====================================
REDIS_HOST=market-data-redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_STRONG_REDIS_PASSWORD
REDIS_DB=0
REDIS_POOL_SIZE=10
REDIS_MIN_IDLE_CONNS=5

# ====================================
# GRPC CONFIGURATION
# ====================================
GRPC_PORT=50054
GRPC_MAX_CONNECTION_IDLE=5m
GRPC_MAX_CONNECTION_AGE=30m
GRPC_KEEPALIVE_TIME=30s
GRPC_KEEPALIVE_TIMEOUT=10s

# ====================================
# CACHE CONFIGURATION
# ====================================
CACHE_TTL_MINUTES=5
CACHE_ENABLED=true

# ====================================
# PRICE OSCILLATION SERVICE
# ====================================
PRICE_UPDATE_INTERVAL=4
PRICE_OSCILLATION_PERCENT=0.01
PRICE_MIN_PRICE=1.00

# ====================================
# LOGGING
# ====================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout

# ====================================
# METRICS
# ====================================
METRICS_ENABLED=true
METRICS_PORT=9090

# ====================================
# ENVIRONMENT
# ====================================
ENVIRONMENT=production
