{
  "dashboard": {
    "title": "Market Data Service - Monitoring Dashboard",
    "tags": ["market-data", "microservices", "hub-investments"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 0,
    "refresh": "5s",
    "panels": [
      {
        "id": 1,
        "title": "gRPC Request Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "rate(market_data_grpc_requests_total[5m])",
            "legendFormat": "{{method}} - {{status}}"
          }
        ]
      },
      {
        "id": 2,
        "title": "gRPC Request Duration (p95)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(market_data_grpc_request_duration_seconds_bucket[5m]))",
            "legendFormat": "{{method}} p95"
          }
        ]
      },
      {
        "id": 3,
        "title": "Active gRPC Streams",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "market_data_grpc_active_streams",
            "legendFormat": "Active Streams"
          }
        ]
      },
      {
        "id": 4,
        "title": "Stream Subscriptions",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "rate(market_data_grpc_stream_subscriptions_total[5m])",
            "legendFormat": "{{action}}"
          }
        ]
      },
      {
        "id": 5,
        "title": "Cache Hit Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "rate(market_data_cache_hits_total[5m]) / (rate(market_data_cache_hits_total[5m]) + rate(market_data_cache_misses_total[5m]))",
            "legendFormat": "Hit Rate"
          }
        ]
      },
      {
        "id": 6,
        "title": "Cache Operations",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "targets": [
          {
            "expr": "rate(market_data_cache_hits_total[5m])",
            "legendFormat": "Hits"
          },
          {
            "expr": "rate(market_data_cache_misses_total[5m])",
            "legendFormat": "Misses"
          },
          {
            "expr": "rate(market_data_cache_errors_total[5m])",
            "legendFormat": "Errors"
          }
        ]
      },
      {
        "id": 7,
        "title": "Database Query Duration (p95)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(market_data_db_query_duration_seconds_bucket[5m]))",
            "legendFormat": "{{operation}} p95"
          }
        ]
      },
      {
        "id": 8,
        "title": "Database Connection Pool",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24},
        "targets": [
          {
            "expr": "market_data_db_connection_pool_active",
            "legendFormat": "Active"
          },
          {
            "expr": "market_data_db_connection_pool_idle",
            "legendFormat": "Idle"
          }
        ]
      },
      {
        "id": 9,
        "title": "Active Subscribers & Symbols",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 32},
        "targets": [
          {
            "expr": "market_data_active_subscribers",
            "legendFormat": "Subscribers"
          },
          {
            "expr": "market_data_active_symbols",
            "legendFormat": "Symbols"
          }
        ]
      },
      {
        "id": 10,
        "title": "Price Updates Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 32},
        "targets": [
          {
            "expr": "rate(market_data_price_updates_total[5m])",
            "legendFormat": "Updates/sec"
          }
        ]
      },
      {
        "id": 11,
        "title": "Quotes Generated by Symbol",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 40},
        "targets": [
          {
            "expr": "rate(market_data_quotes_generated_total[5m])",
            "legendFormat": "{{symbol}}"
          }
        ]
      },
      {
        "id": 12,
        "title": "Error Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 40},
        "targets": [
          {
            "expr": "rate(market_data_grpc_errors_total[5m])",
            "legendFormat": "{{method}} - {{error_type}}"
          },
          {
            "expr": "rate(market_data_db_errors_total[5m])",
            "legendFormat": "DB {{operation}} - {{error_type}}"
          }
        ]
      }
    ]
  }
}

